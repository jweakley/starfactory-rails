%section.textual
  %h1 Workshops
  %ul.tiles
    - @workshops.each do |workshop|
      %li
        = link_to workshop do
          %h3= workshop.name
          - if workshop.events.current.any?
            %time= workshop.events.current.first.starts_at.strftime '%b %e, %Y @ %l:%M %P'
          - else
            %dfn #{workshop.votes_to_go} votes to go
