%section
  .wrapper
    %p
      Don't have any account yet?
      = link_to 'Register', new_user_url
    = form_for :session, url: sessions_url do |f|
      .field
        = f.label :email
        = f.email_field :email, spellcheck: false
      .field
        = f.label :password
        = f.password_field :password
      .field.checkbox
        = f.check_box :remember_me
        = f.label :remember_me
      .actions
        = button_tag 'Login'
